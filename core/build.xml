<?xml version="1.0"?>
<project name="UECIDE Core" default="build">


    <property file="version.plist"/>

    <tstamp>
        <format property="TODAY" pattern="yyyyMMdd" />
    </tstamp>

    <target name="clean" description="Clean out the build directories">
        <delete dir="bin" />
        <delete file="uecide.jar" />
    </target>

    <target name="compile" description="Compile">
        <mkdir dir="bin" />
        <javac target="1.6" 
                debug="true"
                debuglevel="lines,vars,source"
               source="1.6"
               encoding="UTF-8"
               bootclasspath="${bootclass.path}"
               includeAntRuntime="false"
               srcdir="src" destdir="bin"
               classpath="${env.JAVA_HOME}/lib/tools.jar; lib/jssc.jar; lib/JTattoo-1.6.10.jar; lib/liquidlnf.jar">

        </javac>
    </target>		

    <target name="build" depends="compile" description="Build uecide">
        <zip destfile="uecide.jar">
            <zipgroupfileset dir="lib" includes="*.jar"/>
        </zip>
        <jar basedir="bin" destfile="uecide.jar" update="true">
            <manifest>
                <attribute name="Built-By" value="${user.name}"/>
                <attribute name="Main-Class" value="uecide.app.Base"/>
                <attribute name="Class-Path" value="jssc.jar ecj.jar jna.jar uecide.jar JTattoo-1.6.10.jar liquidlnf.jar"/>
                <attribute name="Version" value="${version}"/>
                <attribute name="Build" value="${build.number}" />
                <attribute name="Compiled" value="${TODAY}"/>
            </manifest>
        </jar>
        <jar basedir="i18n" destfile="uecide.jar" update="true" />
        <jar basedir="resources" destfile="uecide.jar" update="true" />

        <chmod perm="0755" file="uecide.jar" />

    </target>
  
</project>
